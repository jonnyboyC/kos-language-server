{
  "name": "kos-language-server",
  "description": "A Language server for Kerbal Operating System. A mod for Kerbal Space Program.",
  "version": "1.1.7",
  "main": "out/src/server.js",
  "types": "out/src/server.d.ts",
  "bin": {
    "kls": "./bin/kos"
  },
  "files": [
    "dist/**/*",
    "out/**/*",
    "bin"
  ],
  "author": "John Chabot",
  "license": "MIT",
  "engines": {
    "node": ">=20.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonnyboyC/kos-language-server"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "denque": "^2.1.0",
    "jsonc-parser": "^3.3.0",
    "ts-set-utils": "^0.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8"
  },
  "keywords": [
    "Kerbal Operating System",
    "kos",
    "Kerbal Space Program",
    "ksp",
    "language-server"
  ],
  "scripts": {
    "bench": "zakzak -c ./zakzak.config.json",
    "build": "tsc -p ./tsconfig.json",
    "bundle": "webpack --config ./webpack.config.js --mode production",
    "test": "jest --config jest.config.js --verbose",
    "prepack": "npm run build && npm run bundle && npm test"
  },
  "devDependencies": {
    "@dynatrace/zakzak": "^0.6.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.6.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jstat": "^1.9.6",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
